<%

current_addresses_path = user_addresses_path(ownertable_type: @address.ownertable_type, id: @address.ownertable_id, address_area_id: @address.address_area_id, page_title: @page_title)

if @current_user.admin?
	breadcrumbs = [
		{active: false, href: root_path, text: t('menu.initial_page')},
		{active: false, href: users_user_path, text: User.human_attribute_name(:common_users)},
		{active: false, href: edit_user_path(@address.ownertable), text: @address.ownertable.get_name},
		{active: false, href: current_addresses_path, text: @page_title},
		{active: false, href: edit_user_address_path(id: @address.id), text: @address.name},
		{active: true, href: '#', text: t('model.edit')},
	]
else
	breadcrumbs = [
		{active: false, href: root_path, text: t('menu.initial_page')},
		{active: false, href: edit_user_path(@address.ownertable), text: @address.ownertable.get_name},
		{active: false, href: current_addresses_path, text: @page_title},
		{active: false, href: edit_user_address_path(id: @address.id), text: @address.name},
		{active: true, href: '#', text: t('model.edit')},
	]
end

%>

<%= 
	render 'common_pages/edit', 
	objects_path: current_addresses_path, 
	page_title: @page_title, 
	form_to_render: 'users/addresses/form',
	breadcrumbs: breadcrumbs
%>
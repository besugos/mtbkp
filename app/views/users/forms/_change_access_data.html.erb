<%= simple_form_for @user, url: update_access_data_path(id: @user.id), method: :post do |f| %>
    <!-- Dados de acesso -->
    <div class="row">

        <!-- TÃ­tulo -->
        <div class="col-12">
            <h4 class="mt-4"><%= User.human_attribute_name(:access_data) %></h4>
        </div>

        <!-- Senha de acesso -->
        <div class="col-12 col-md-3 mb-3">
            <%= f.input :current_password, input_html: {autocomplete: 'new-password'}  %>
        </div>

        <%= render 'users/forms/access_data_fields', f: f %>

    </div>

    <%= render 'common_pages/save', f: f, return_path: edit_user_path(@user) %>
<% end %>


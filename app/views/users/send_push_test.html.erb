<%
breadcrumbs = [
    {active: false, href: root_path, text: t('menu.initial_page')},
    {active: true, href: '#', text: t('model.send_push_test')},
]
%>

<div class="container">
    <div class="row mb-3">
        <div class="d-none d-md-block col-md-10 text-center">
            <%= render 'common_pages/breadcrumb', links: breadcrumbs %>
        </div>
    </div>

    <div class="row">
        <%= form_tag send_push_to_mobile_path, method: :post do %>
            <%= select_tag :service, options_for_select([ "Firebase", "OneSignal" ], "Firebase") %>
            <br>
            <%= text_field_tag :mobile_code, params[:mobile_code], placeholder: "Código do dispositivo" %>
            <br>
            <%= text_field_tag :title, params[:title], placeholder: "Título" %>
            <br>
            <%= text_field_tag :message, params[:message], placeholder: "Mensagem" %>
            <br>
            <button class="btn btn-primary" type="submit"><%= t('model.send') %></button>
        <% end %>
    </div>
</div>


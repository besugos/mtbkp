<%= simple_form_for(@state) do |f| %>

<div class="row">

        <div class="col-12">
                <%= f.error_notification %>
                <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        </div>

        <div class="col-12 col-md-3">
                <%= f.input :name %>
        </div>
        <div class="col-12 col-md-3">
                <%= f.input :acronym %>
        </div>
        <div class="col-12 col-md-6">
                <%= f.association :country, collection: Country.all, as: :select, include_blank: I18n.t('model.select_option') %>
        </div>
</div>

<%= render 'common_pages/save', f: f, return_path: states_path %>

<% end %>

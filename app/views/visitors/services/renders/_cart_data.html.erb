<div class="bg-product-cart p-4">

	<div class="row">
		<% if service.activate_budget %>
		<div class="col-12">
			<a class="text-decoration-none ms-2 text-success" href="https://api.whatsapp.com/send?phone=55<%=format_phone(service.budget_whatsapp)%>&text=<%=get_service_message_to_whatsapp(service)%>" target="_blank">
				<h4>
					<i class="bi bi-whatsapp"></i>
					Solicite seu or√ßamento
				</h4>
			</a>
		</div>
		<% else %>
		<div class="col-12">
			<h3><small>A partir de:</small> <%= CustomHelper.to_currency(service.get_price) %></h3>
		</div>
		<% end %>
	</div>

	<div class="row mt-3">
		<div class="col-12">
			<%= render 'visitors/services/renders/modal_show_seller_data', seller: service.user %>
			<button class="btn btn-link btn-sm" data-bs-toggle="modal" data-bs-target="#show_seller_contact_data_<%=service.user.id%>">
				<%= User.human_attribute_name(:seller_contact_data) %>
			</button>
		</div>
	</div>

	<div class="row mt-4">
		<div class="col-12">
			<h5><%= User.human_attribute_name(:professional_register) %></h5>
			<% if !service.user.data_professional.nil? %>
				<div class="mt-3">
					<b><%= DataProfessional.human_attribute_name(:profession) %>:</b> <%= service.user.data_professional.profession %>
				</div>
				<div class="mt-3">
					<b><%= DataProfessional.human_attribute_name(:register_type) %>:</b> <%= service.user.data_professional.register_type %>
				</div>
				<div class="mt-3">
					<b><%= DataProfessional.human_attribute_name(:register_number) %>:</b> 
					<% if service.user.seller_verified %>
						<i title="Verificado" class="bi bi-check-circle-fill text-info ms-2"></i>
					<% end %>
				</div>
			<% end %>
			
		</div>
	</div>
</div>
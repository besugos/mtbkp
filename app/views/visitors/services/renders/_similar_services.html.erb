<div class="row mb-3">
	<div class="col-12">
		<h4 class="mt-4"><%= Service.human_attribute_name(:similar_services) %></h4>
	</div>

	<% @similar_services.each do |service| %>
		<%
			if service.instance_of?(Service)
				service = service
				distance_value = nil
			else
				distance_value = service[:distance_value]
				service = service[:service]
			end
		%>
		<div class="col-12 col-md-3">
			<%= render "visitors/home/renders/services/service_card", service: service, distance_value: distance_value %>
		</div>
	<% end %>
</div>
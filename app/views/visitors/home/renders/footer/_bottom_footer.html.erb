<div class="container-fluid bg-bt-footer">
	<div class="container pt-2 pb-2">
		<div class="row d-flex align-items-center">
			<div class="col-12 col-lg-9 text-white ">
				<%= t("session.project") %>
				 - 
				<%= SystemConfiguration.human_attribute_name(:cnpj) %>: <%= @system_configuration.cnpj %>
				<br>
				<% if !@system_configuration.address.nil? %>
					<%= @system_configuration.address.get_address_value %>

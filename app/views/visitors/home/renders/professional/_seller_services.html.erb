<div class="row mt-2">
	<div class="col-12 border">
		<div class="p-3">
			<div class="d-flex justify-content-between">
				<h4><%= Service.model_name.human(count: 2) %></h4>
				<a href="<%= services_by_professional_path(id: professional.id) %>"><%= User.human_attribute_name(:show_all) %></a>
			</div>
			<div class="row">
				<% professional.services.to_show_in_site.order("RAND()").limit(4).each do |service| %>
					<div class="col-12 col-md-3">
						<%= render "visitors/home/renders/services/service_card", service: service %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% random_string = Digest::MD5.hexdigest rand.to_s %>
<div class="dropdown">
    <button class="btn btn-dark btn-sm dropdown-toggle" type="button" id="<%= random_string %>" data-bs-toggle="dropdown" aria-expanded="false">
        <%= t('model.management') %>
    </button>

    <ul class="dropdown-menu" aria-labelledby="<%= random_string %>">
        <% array_links.each do |link| %>
            <li>
                <% if !link[:show_modal].nil? && link[:show_modal] %>
                    <%= link_to link[:link_path], method: link[:link_method], data: {title: link[:link_title], confirm: link[:confirm], target: link[:target], toggle: link[:toggle]}, :class => link[:class] do %>
                        <small>
                            <i class="<%= link[:link_image] %>"></i>
                            <%= link[:text_action] %>
                        </small>
                    <% end if link[:link_policy] %>
                <% else %>
                    <%= link_to link[:link_path], method: link[:link_method], data: {title: link[:link_title], confirm: link[:confirm]}, target: link[:target], :class => link[:class], target: link[:target], id: link[:id] do %>
                        <small>
                            <i class="<%= link[:link_image] %>"></i>
                            <%= link[:text_action] %>
                        </small>
                    <% end if link[:link_policy] %>
                <% end %>
            </li>
        <% end %>
    </ul>
</div>


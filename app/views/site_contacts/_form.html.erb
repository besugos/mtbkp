<%= simple_form_for(@site_contact) do |f| %>

    <div class="row">

        <div class="col-12">
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        </div>

        <div class="col-12 col-md-3">
                <%= f.association :site_contact_subject,
                collection: SiteContactSubject.all,
                as: :select,
                include_blank: false,
                disabled: true
                %>
        </div>
        <div class="col-12 col-md-3">
                <%= f.input :name, disabled: true %>
        </div>
        <div class="col-12 col-md-3">
                <%= f.input :email, disabled: true %>
        </div>
        <div class="col-12 col-md-3">
                <%= f.input :phone, disabled: true %>
        </div>
        <div class="col-12 col-md-3">
                <%= f.input :message, disabled: true %>
        </div>
    </div>

    <%= render 'common_pages/save', f: f, return_path: site_contacts_path %>

<% end %>

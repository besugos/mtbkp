<div class="container">
    <%= simple_form_for @category do |f| %>
        <%= f.input :category_type_id, as: :hidden, input_html: {value: @category.category_type_id} %>

        <div class="row">
            <!-- Nome da categoria -->
            <div class="col-12 col-md-4 mb-3">
                <%= f.input :name, label: Category.human_attribute_name(:name) %>
            </div>
        </div>

        <div class="row">
            <!-- TÃ­tulo das subcategorias -->
            <div class="col-12 mb-3">
                <h5 class="mt-4"><%= SubCategory.model_name.human(count: 2) %></h5>
            </div>
            
            <%= render 'categories/forms/form_sub_categories', f:f, category: @category %>
        </div>

        <%= render 'common_pages/save', f: f, return_path: categories_path(category_type_id: @category.category_type_id) %>

    <% end %>
</div>


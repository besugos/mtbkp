<% freight_order_option = Order.get_freight_order_option_object_by_seller(current_order, seller) %>

<div class="col-12 p-3 d-flex justify-content-between">
	
	<div>
		<div class="mt-3">
			<span><b>#<%= seller.id %> - <%= seller.name %></b></span>
			<br>
		</div>
		
		<% if current_order.user_id != @current_user.id %>
			<div class="mt-3">
				<span>Frete: <b>
					<% if !freight_order_option.nil? %>
						(<%= freight_order_option.name %>)
					<% end %>
				</b></span>
				<br>
				<span>Total do vendedor: <b><%= CustomHelper.to_currency(Order.get_receiver_value_by_seller(current_order, seller, false)) %></b></span>
			</div>
		<% end %>

		<div class="row">
			<div class="col-12">
				<%= render "orders/show/freight_order_option", current_order: current_order, seller: seller, freight_order_option: freight_order_option %>
			</div>
		</div>
	</div>

	<%= render "orders/show/chat", current_order: current_order, seller: seller, freight_order_option: freight_order_option %>
</div>

<div class="col-12">
	<%= render "orders/show/table_seller", current_order: current_order, seller: seller, freight_order_option: freight_order_option %>
</div>

<div class="col-12">
	<%= render "orders/show/professional_avaliation", current_order: current_order, seller: seller, freight_order_option: freight_order_option %>
</div>

<%= render "orders/show/regret_purchase", current_order: current_order, seller: seller, freight_order_option: freight_order_option %>
<hr>
<!-- Cabeçalho -->
<%= render "visitors/home/renders/index/header" %>
<%= render "visitors/home/renders/index/filter_by_text" %>


<!-- Conteúdo central -->
<div class="container p-3">
    <div class="row">
        <div class="col-12">
            <% if @current_order.order_carts.length > 0 %>
                <%= hidden_field_tag "current_order_to_pay_id", @current_order.id %>
                <div class="row">
                    <%= render 'orders/order_carts', open: true, current_order: @current_order %>
                </div>
            <% else %>
                <div class="col-12">
                    <p class="text-muted text-center m-5">
                        <%= Order.human_attribute_name(:empty_order) %>
                    </p>
                </div>
            <% end %>
        </div>
    </div>
</div>

<!-- Footer -->
<%= render "visitors/home/renders/footer/top_footer" %>
<%= render "visitors/home/renders/footer/middle_footer" %>
<%= render "visitors/home/renders/footer/bottom_footer" %>



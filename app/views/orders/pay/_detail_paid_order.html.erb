<div class="container mt-5">
	<div class="row">
		<div class="col-12 ">
			<h5>Detalhes do pedido #<%= current_order.id.to_s %></h5>
		</div>
	</div>
	<%= render "visitors/home/renders/sold_order_details/order_status", current_order: current_order, order_cart: order_cart %>
	<% order_carts_sellers = Order.get_order_formatted_by_sellers(current_order) %>
	<% order_carts_sellers.each do |seller| %>
		<% if (current_order.user_id == @current_user.id || @current_user.id == seller.id) || @current_user.admin? %>
			<%= render "orders/show/seller_data", current_order: current_order, seller: seller %>
		<% end %>
	<% end %>
</div>
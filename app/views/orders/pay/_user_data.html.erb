<div class="col-12">

    <h5><%= Order.human_attribute_name(:user_data) %></h5>

    <%= simple_form_for current_order.user, url: save_data_to_buy_path(id: current_order.user.id, current_order_id: current_order.id), method: :post, validate: true, html: {class: "pay_order_form"} do |f| %>

    <%= hidden_field_tag 'show_data_user', params[:show_data_user] %>

    <div class="row">

        <div class="col-12 col-lg-6">
            <%= f.input :name, input_html: {class: 'insert_just_letter'} %>
        </div>

        <div class="col-12 col-lg-3">
            <%= f.input :cpf, input_html: {class: 'cpf-cnpj', type: "tel"} %>
        </div>

    </div>

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-sm btn-primary d-block mt-3 text-white">
                <%= Order.human_attribute_name(:go_to_address) %>
            </button>
        </div>
    </div>

    <% end %>
</div>


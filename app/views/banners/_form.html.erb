<%= simple_form_for(@banner) do |f| %>

<div class="row">
    <div class="col-12">
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12 col-md-6">
        <%= render "common_pages/image_input", image: f.object.image, form: f, label: Banner.human_attribute_name(:image), attribute: :image %>
    </div>
    <div class="col-12 col-md-6">
        <%= render "common_pages/image_input", image: f.object.image_mobile, form: f, label: Banner.human_attribute_name(:image_mobile), attribute: :image_mobile %>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-4">
        <%= f.input :title %>
    </div>
    <div class="col-12 col-md-4">
        <%= f.input :link %>
    </div>
    <div class="col-12 col-md-4">
        <%= f.input :position %>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-4">
        <%= f.association :banner_area, collection: BannerArea.all, as: :select, include_blank: false %>
    </div>
    <div class="col-12 col-md-4">
        <%= f.input :active, as: :select, collection: [[Banner.human_attribute_name(:visible), true],[Banner.human_attribute_name(:hidden), false]], include_blank: false, label: Banner.human_attribute_name(:status) %>
    </div>
    <div class="col-12 col-md-4">
        <%= f.input :disponible_date, as: :string, input_html: {class: 'datepicker', :value => CustomHelper.get_text_date(f.object.disponible_date, 'date', :default), autocomplete: :off, type: "tel"} %>
    </div>
</div>

<%= render 'common_pages/save', f: f, return_path: banners_path %>

<% end %>
